{
  "name": "banjiao",
  "displayName": "半角",
  "description": "【中文，符号】自动转 [英文,符号]",
  "version": "1.5.1",
  "publisher": "gimjin",
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.98.0",
    "node": "^20.19.4",
    "pnpm": "^10.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gimjin/banjiao.git"
  },
  "keywords": [
    "banjiao",
    "半角",
    "全角",
    "转半角",
    "自动转半角",
    "全角转半角",
    "全角自动转半角",
    "中文",
    "英文",
    "符号",
    "中文符号",
    "英文符号",
    "输入法",
    "中文输入法",
    "auto-correct",
    "Auto Correct",
    "autopunc",
    "中文标点符号转英文",
    "标点符号",
    "中文标点符号",
    "标点符号转换",
    "中文标点符号转换为英文",
    "中文标点符号替换为英文",
    "中文编程",
    "翻译",
    "translate"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsc -p ./ && vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "change-case-all": "^2.1.0",
    "md5": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.32.0",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.5.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "categories": [
    "Formatters",
    "Keymaps",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "banjiao.switch",
        "title": "半角开关"
      }
    ],
    "keybindings": [
      {
        "command": "banjiao.switch",
        "key": "Alt+B",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "BanJiao",
      "properties": {
        "banjiao.switch": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "开半角 `Alt+B`"
        },
        "banjiao.enableBatch": {
          "type": "boolean",
          "default": false,
          "description": "启用粘贴代码批处理"
        },
        "banjiao.keymaps": {
          "type": "array",
          "default": [
            {
              "full": "。",
              "half": "."
            },
            {
              "full": "，",
              "half": ","
            },
            {
              "full": "：",
              "half": ":"
            },
            {
              "full": "；",
              "half": ";"
            },
            {
              "full": "、",
              "half": "/"
            },
            {
              "full": "“",
              "half": "\""
            },
            {
              "full": "”",
              "half": "\""
            },
            {
              "full": "‘",
              "half": "'"
            },
            {
              "full": "’",
              "half": "'"
            },
            {
              "full": "（",
              "half": "("
            },
            {
              "full": "）",
              "half": ")"
            },
            {
              "full": "【",
              "half": "["
            },
            {
              "full": "】",
              "half": "]"
            },
            {
              "full": "｛",
              "half": "{"
            },
            {
              "full": "｝",
              "half": "}"
            },
            {
              "full": "「",
              "half": "{"
            },
            {
              "full": "」",
              "half": "}"
            },
            {
              "full": "『",
              "half": "{"
            },
            {
              "full": "』",
              "half": "}"
            },
            {
              "full": "《",
              "half": "<"
            },
            {
              "full": "》",
              "half": ">"
            },
            {
              "full": "·",
              "half": "`"
            },
            {
              "full": "…",
              "half": "^"
            },
            {
              "full": "￥",
              "half": "$"
            },
            {
              "full": "¥",
              "half": "$"
            },
            {
              "full": "？",
              "half": "?"
            },
            {
              "full": "！",
              "half": "!"
            },
            {
              "full": "—",
              "half": "_"
            },
            {
              "full": "｜",
              "half": "|"
            }
          ],
          "description": "全角半角映射"
        },
        "banjiao.translateAppid": {
          "type": "string",
          "default": "",
          "description": "百度开发者 appid"
        },
        "banjiao.translateSecret": {
          "type": "string",
          "default": "",
          "description": "百度开发者 secret"
        },
        "banjiao.excludeExtensions": {
          "type": "array",
          "default": [
            "md",
            "txt"
          ],
          "items": {
            "type": "string"
          },
          "description": "这些文件类型不进行符号转换"
        },
        "banjiao.enableInComments": {
          "type": "boolean",
          "default": false,
          "description": "单行注释中启用符号转换"
        }
      }
    }
  }
}
